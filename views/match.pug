#player_info
  .row.valign-wrapper
    .info-match.col.s6
      div
        | Match 
        span #{match_no}
    .col.s6.right-align 
      div #{match_type}
      div #{moment(start_timestamp).utcOffset('+0700').format('D MMM YYYY k:mm')}

  .row.valign-wrapper
    .info-home-team.col.s4.center-align
      - var url = "/images/"+home_team+".png";
      img.large-circle-image.circle(src=url, alt=home_team)
      div #{home_team_name}
    .info-match-score.col.s4.center-align
      if home_score!=undefined
        .player-score #{home_score} - #{away_score}
      if home_score_120!=undefined
        .score-120 ex #{home_score_120} - #{away_score_120}
      if home_score_pk!=undefined
        .score-pk pk #{home_score_pk} - #{away_score_pk}
    .info-away-team.col.s4.center-align
      - var url = "/images/"+away_team+".png";
      img.large-circle-image.circle(src=url, alt=away_team)
      div #{away_team_name} 
  .row
    .seperate-line
  .row
    .col.s12.center-align Your score
  .row
    .col.s2
    .col.s3.center-align
      if can_save==true
        .input-field
          select#input_home_score
            if result!=undefined
              option(value='',disabled='')
              option(value='0',selected=result.home_score===0) 0
              option(value='1',selected=result.home_score===1) 1
              option(value='2',selected=result.home_score===2) 2
              option(value='3',selected=result.home_score===3) 3
              option(value='4',selected=result.home_score===4) 4
              option(value='5',selected=result.home_score===5) 5
              option(value='6',selected=result.home_score===6) 6
              option(value='7',selected=result.home_score===7) 7
              option(value='8',selected=result.home_score===8) 8
              option(value='9',selected=result.home_score===9) 9
            else
              option(value='',disabled='',selected='')
              option(value='0') 0
              option(value='1') 1
              option(value='2') 2
              option(value='3') 3
              option(value='4') 4
              option(value='5') 5
              option(value='6') 6
              option(value='7') 7
              option(value='8') 8
              option(value='9') 9
      else if result!=undefined
        .result-score #{result.home_score}
    .col.s2.center-align
        .result-score -
    .col.s3.center-align
      if can_save==true
        .input-field
          select#input_away_score
            if result!=undefined
              option(value='',disabled='')
              option(value='0',selected=result.away_score===0) 0
              option(value='1',selected=result.away_score===1) 1
              option(value='2',selected=result.away_score===2) 2
              option(value='3',selected=result.away_score===3) 3
              option(value='4',selected=result.away_score===4) 4
              option(value='5',selected=result.away_score===5) 5
              option(value='6',selected=result.away_score===6) 6
              option(value='7',selected=result.away_score===7) 7
              option(value='8',selected=result.away_score===8) 8
              option(value='9',selected=result.away_score===9) 9
            else
              option(value='',disabled='',selected='')
              option(value='0') 0
              option(value='1') 1
              option(value='2') 2
              option(value='3') 3
              option(value='4') 4
              option(value='5') 5
              option(value='6') 6
              option(value='7') 7
              option(value='8') 8
              option(value='9') 9
      else if result!=undefined
        .result-score #{result.away_score}
    .col.s2
  .row
    .col.s12.center-align 
      div * When match start you can not save score
  .row
    if can_save==true
      .col.s12 
        .center-align
          a(id="save_button",class="next waves-effect waves-light btn-large light-blue darken-1",onclick="saveScore('"+match_no+"')")="Save score"
    else
      .col.s12 
        .center-align
          a(id="save_button",class="next waves-effect waves-light disabled btn-large light-blue darken-1")="Save score"
  
  .row
    .seperate-line  
  .row
    .col.s4.center-align #{home_team_name} win 
    .col.s4.center-align draw
    .col.s4.center-align #{away_team_name} win 
  .row
    .col.s4.center-align #{sum_home_win}  (#{sum_home_win_perc}%)
    .col.s4.center-align #{sum_draw}  (#{sum_draw_perc}%)
    .col.s4.center-align #{sum_away_win}  (#{sum_away_win_perc}%)
  .row.valign-wrapper
    .col.s9 Number of right score 
    .col.s2.right-align.valign-wrapper
      span #{sum_right_score} (#{sum_right_score_perc}%)   
    .col.s1.center-align.valign-wrapper
      img(src="/images/right_score.png")
  .row.valign-wrapper
    .col.s9 Number of right result 
    .col.s2.right-align.valign-wrapper
      span #{sum_right_result} (#{sum_right_result_perc}%)   
    .col.s1.center-align.valign-wrapper
      img(src="/images/right_result.png")
  .row.valign-wrapper
    .col.s9 Number of wrong result 
    .col.s2.right-align.valign-wrapper
      span #{sum_wrong_result} (#{sum_wrong_result_perc}%)   
    .col.s1.center-align.valign-wrapper
      img(src="/images/wrong_result.png")


